<script>
navigator.serviceWorker.register('service-worker.js');
</script>

<script>
    Blazor.start({
        reconnectionHandler: {
            onConnectionDown: () => setTimeout(function () { location.reload(); }, 5000),
        }
    });
</script>

</body>
</html>